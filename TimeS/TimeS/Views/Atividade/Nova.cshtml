@model TimeS.Model.Atividade

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Criar Atividade</h4>
        </div>
        <div class="modal-body">
            <form method="post" ng-submit="NovaAtividade()">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="Nome" placeholder="Insira um Nome" ng-model="NovaAtividadeModel.Nome"/>
                            @Html.ValidationMessageFor(model => model.Nome, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            <textarea class="form-control" placeholder="Insira um Descricao" ng-model="NovaAtividadeModel.Descricao" rows="3"></textarea>
                            @Html.ValidationMessageFor(model => model.Descricao, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tipo, htmlAttributes: new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            @*<select class="form-control" name="Tipo"
                                    ng-options="tipoatividade.Nome for tipoatividade.Id in tiposatividades track by tipoatividade.Id"
                                    ng-model="NovaAtividadeModel.Tipo">*@
                            <select class="form-control" name="Tipo_Id" ng-model="NovaAtividadeModel.Tipo_Id">
                                <option ng-repeat="tipoatividade in tiposatividades" value="{{tipoatividade.Id}}">{{tipoatividade.Nome}}</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Tipo, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Responsavel, htmlAttributes: new {@class = "control-label col-sm-3"})
                        <div class="col-sm-9">
                            <select class="form-control" name="Responsavel_Id" ng-model="NovaAtividadeModel.Responsavel_Id">
                                <option ng-repeat="usuario in usuarios" value="{{usuario.Id}}">{{usuario.Nome}}</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Responsavel, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Participantes, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            <select class="form-control" name="Participantes" ng-model="NovaAtividadeModel.Participantes" multiple>
                                <option ng-repeat="usuario in usuarios" value="{{usuario.Id}}">{{usuario.Nome}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

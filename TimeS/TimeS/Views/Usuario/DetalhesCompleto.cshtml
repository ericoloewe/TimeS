@model TimeS.Model.ViewModels.UsuarioViewModel

<div class="container">
    <h2>Detalhes Usuario - {{DetalhesUsuarioModel.Nome}}</h2>
    <div class="row">
        <div class="col-sm-12">
            <img class="img-thumbnail" src="{{DetalhesUsuarioModel.Foto}}" style="margin-bottom: 20px;" alt="Foto do Usuario" width="200"/>
        </div>
        @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "control-label col-sm-2"})
        <p class="col-sm-10">{{DetalhesUsuarioModel.Nome}}</p>
        @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-sm-2"})
        <p class="col-sm-10">{{DetalhesUsuarioModel.Email}}</p>
        @Html.LabelFor(model => model.Role, htmlAttributes: new {@class = "control-label col-sm-2"})
        <p class="col-sm-10">{{DetalhesUsuarioModel.Role}}</p>
        <br/>
        @Html.LabelFor(model => model.Atividades, htmlAttributes: new {@class = "control-label col-sm-12"})
        <div class="col-sm-12" ng-controller="listarAtividadeDoUsuarioController">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th hidden>#</th>
                        <th>
                            Nome
                            <span class="glyphicon glyphicon-menu-down" ng-click="ordem = '-Nome'"></span>
                            <span class="glyphicon glyphicon-menu-up" ng-click="ordem = 'Nome'"></span>
                        </th>
                        <th>
                            Descrição
                            <span class="glyphicon glyphicon-menu-down" ng-click="ordem = '-Descricao'"></span>
                            <span class="glyphicon glyphicon-menu-up" ng-click="ordem = 'Descricao'"></span>
                        </th>
                        <th>
                            Entrega
                            <span class="glyphicon glyphicon-menu-down" ng-click="ordem = '-Entrega'"></span>
                            <span class="glyphicon glyphicon-menu-up" ng-click="ordem = 'Entrega'"></span>
                        </th>
                        <th>
                            Status
                            <span class="glyphicon glyphicon-menu-down" ng-click="ordem = '-Status'"></span>
                            <span class="glyphicon glyphicon-menu-up" ng-click="ordem = 'Status'"></span>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="tarefa in tarefasfiltradas = (tarefas | orderBy: ordem)">
                        <td hidden>{{tarefa.Id}}</td>
                        <td>{{tarefa.Nome}}</td>
                        <td>{{tarefa.Descricao}}</td>
                        <td>{{tarefa.Entrega}}</td>
                        <td>{{tarefa.Status}}</td>
                        <td>
                            <a data-toggle="modal" data-target="#editarTarefa" ng-click="EditarTarefa(tarefa)">Editar</a> |
                            <a data-toggle="modal" data-target="#deletarTarefa" ng-click="DeletarTarefa(tarefa)">Deletar</a> |
                            <a data-toggle="modal" data-target="#detalhesTarefa" ng-click="DetalhesTarefa(tarefa)">Detalhes</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal Nova -->
    <div class="modal fade" id="novaAtividade" tabindex="-1" role="dialog" aria-labelledby="Nova Atividade" ui-view="novaAtividades"></div>
    <!-- Modal Editar -->
    <div class="modal fade" id="editarAtividade" tabindex="-1" role="dialog" aria-labelledby="Editar Atividade" ui-view="editarAtividades"></div>
    <!-- Modal Deletar -->
    <div class="modal fade" id="deletarAtividade" tabindex="-1" role="dialog" aria-labelledby="Deletar Atividade" ui-view="deletarAtividades"></div>
</div>
